#include <iostream>

using namespace std;

int main()
{
    int m,n,k,a,b,count=0,max_num=-999999999,count_max=-999999999;
    cin >> m >> n >> k;
    int A[m+2][n+2];
    for(int i = 0; i < m+2; i++){
    for(int j = 0; j < n+2; j++){
        if(i == 0 || j == 0 || i ==m+1  || j == n+1){
            A[i][j] = 2; 
        }else{
        A[i][j] = 0;
        }
    }
    cout << endl;
}
    for (int l = 0;l<k;l++){
        cin >> a >> b;
        A[a][b] = 1;
    }
    for(int i = 1; i < m+1; i++){
    for(int j = 1; j < n+1; j++){
        if(A[i][j]==A[i-1][j-1]){
            count++;
        }if(A[i][j]==A[i-1][j]){
            count++;
        } if(A[i][j]==A[i-1][j+1]){
            count++;
        } if(A[i][j]==A[i][j-1]){
            count++;
        } if(A[i][j]==A[i][j+1]){
            count++;
        }
         if(A[i][j]==A[i+1][j-1]){
            count++;
        } if(A[i][j]==A[i+1][j]){
            count++;
        } if(A[i][j]==A[i+1][j+1]){
            count++;
        }
        if(count > count_max){
            count_max = count;
        }
        count = 0;
    }
     for(int i = 1; i < m+1; i++){
     for(int j = 1; j < n+1; j++){
        if(A[i][j]==A[i-1][j-1]){
            count++;
        }if(A[i][j]==A[i-1][j]){
            count++;
        } if(A[i][j]==A[i-1][j+1]){
            count++;
        } if(A[i][j]==A[i][j-1]){
            count++;
        } if(A[i][j]==A[i][j+1]){
            count++;
        }
         if(A[i][j]==A[i+1][j-1]){
            count++;
        } if(A[i][j]==A[i+1][j]){
            count++;
        } if(A[i][j]==A[i+1][j+1]){
            count++;
        }
        if(count == count_max){
            max_num++;
        }
        count = 0;
    }    
    }
    
    //  for (auto &row : A)
    // {
    //     for (auto &column : row)
    //     {
    //         cout << column << " ";
    //     }
    //     cout << endl;
    // }
    cout << count_max << endl;
    cout << max_num;
    return 0;
}
