#include <iostream>
using namespace std;

int main()
{
    int ok,tw=0,P,Gandola=0;
    long long x,n;
    
    cin >> n >> x;
    for(int j=0;j<n;j++){
        cin >> P;
        tw = tw + P;
    }
        
        if(tw%x==0){
           Gandola = tw/x; 
        }else{
            Gandola = (tw/x) + 1;
        }
        cout << Gandola;
        return 0;
}
